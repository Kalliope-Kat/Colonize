extends layout

        
block mainContent
    each val in messages
        .flash #{val}         
    .container
        form.form-signin(action="/register", method="post")
            h2.form-signin-heading.text-center Register
                 
            label.sr-only(for='username') Username
            input.form-control(type='text', name='username', id='username', placeholder='Username', required, autofocus)
            
            label.sr-only(for='name') Name
            input.form-control(type='text', name='name', id='name', placeholder='Name', required, autofocus)
            
            label.sr-only(for='email') Email
            input.form-control(type='text', name='email', id='email', placeholder='Email', required)
            
            label.sr-only(for='password') Password
            input.form-control(type='password', name='password', id='password', placeholder='Password', required)
            
            button.btn.btn-lg.btn-primary.btn-block(type='submit') Register                
    .row
        .center-block.text-center
            a(href="/oauth/facebook") Login with Facebook |
            a(href="/oauth/twitter") Login with Twitter
                
            